{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true,
        "node": true,
        "worker": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": "latest"
    },
    "rules": {
        "indent": [
            "warn",
            "tab"
        ],
        "quotes": [
            "warn",
            "double"
        ],
        "semi": [
          "warn",
          "always"
        ],
        "no-extra-semi": "warn",
        "no-mixed-spaces-and-tabs": "warn",
        "no-unused-vars": "warn"
    },
    "ignorePatterns": ["libmupdf.js"]
}
